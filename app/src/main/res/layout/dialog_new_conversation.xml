<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <TextView
      android:id="@+id/titleEnterAddress"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:gravity="center_vertical"
      android:text="@string/new_conversations_dialog_enter_address_title"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/Base.DialogWindowTitle.AppCompat"/>

  <EditText
      android:id="@+id/inputAddressEditText"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="6dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:hint="@string/new_conversation_dialog_address_hint"
      android:inputType="textCapWords"
      android:maxLines="1"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/titleEnterAddress"
      app:layout_constraintVertical_bias="0.0"
      tools:ignore="Autofill"/>


</androidx.constraintlayout.widget.ConstraintLayout>