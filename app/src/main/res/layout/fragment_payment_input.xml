<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.radixdlt.android.apps.wallet.ui.fragment.payment.input.PaymentInputFragment">

    <ScrollView
        android:id="@+id/sendRadixScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputAmountTIL"
                style="@style/MaterialTextLayoutOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:theme="@style/MaterialTextLayoutOutlinedTheme"
                app:layout_constraintEnd_toStartOf="@+id/linLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputAddressTIL">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/amountEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/receive_radix_activity_amount_hint"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:maxLength="128"
                    android:textIsSelectable="true"
                    android:textAlignment="textStart" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sendButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:text="@string/send_activity_xml_send_button"
                android:textColor="@android:color/white"
                android:theme="@style/AccentButton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/paymentInputAddNote"
                app:layout_constraintVertical_bias="1.0"
                tools:backgroundTint="@color/colorAccent" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/pasteButton"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/rounded_button_grey"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="6dp"
                android:src="@drawable/ic_paste"
                android:stateListAnimator="@animator/button_elevation"
                app:layout_constraintBottom_toTopOf="@+id/qrScanButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/inputAddressTIL"
                app:layout_constraintVertical_chainStyle="packed" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/qrScanButton"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_button_grey"
                android:elevation="3dp"
                android:gravity="center"
                android:padding="6dp"
                android:src="@drawable/ic_qr"
                android:stateListAnimator="@animator/button_elevation"
                app:layout_constraintBottom_toBottomOf="@+id/inputAddressTIL"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pasteButton"
                app:layout_constraintVertical_chainStyle="packed" />

