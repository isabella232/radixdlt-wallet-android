            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputAddressTIL"
                style="@style/MaterialTextLayoutOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:theme="@style/MaterialTextLayoutOutlinedTheme"
                app:layout_constraintEnd_toStartOf="@+id/qrScanButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputAddressTIET"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:hint="@string/send_activity_enter_address_hint"
                    android:inputType="textCapWords|textMultiLine"
                    android:maxLength="128"
                    android:maxLines="2"
                    android:textIsSelectable="true"
                    android:gravity="top"
                    tools:text="JH1P8f3znbyrDj8F4RWpix7hRkxqHjdW2NnKpR3v6uXnknor"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/linLayout"
                android:layout_width="110dp"
                android:layout_height="54dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_button_grey"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/inputAmountTIL"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/inputAmountTIL">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/assetIcon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_paste"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/assetIso"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:drawableEnd="@drawable/ic_dropdown_green"
                    android:paddingEnd="16dp"
                    android:paddingStart="4dp"
                    android:maxLines="1"
                    android:maxLength="4"
                    android:text="XRD"/>
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/paymentInputMaxValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputAmountTIL"
                android:layout_marginTop="8dp"
                android:text="Add max value 849 XRD"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:textColor="@color/color_states_payment_input_text_view"
                app:fontFamily="@font/roboto_medium_radix"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/paymentInputAddNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputMessageTIL"
                android:text="Add note (Optional)"
                android:paddingStart="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:textColor="@color/color_states_payment_input_text_view"
                app:fontFamily="@font/roboto_medium_radix"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputMessageTIL"
                style="@style/MaterialTextLayoutOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:theme="@style/MaterialTextLayoutOutlinedTheme"
                android:visibility="gone"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/paymentInputMaxValue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputMessageTIET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Note"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLength="128" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>